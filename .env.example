# ========================================
# PSI AGENDA SYSTEM - Configurações
# ========================================

# Ambiente
NODE_ENV=development
PORT=3000

# ========================================
# BANCO DE DADOS (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=sua_senha_aqui
DB_DATABASE=psi_agenda

# ========================================
# WHATSAPP BUSINESS API
# ========================================
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id
WHATSAPP_ACCESS_TOKEN=seu_access_token
WHATSAPP_VERIFY_TOKEN=seu_verify_token_customizado
WHATSAPP_WEBHOOK_SECRET=seu_webhook_secret

# ========================================
# GOOGLE CALENDAR API
# ========================================
GOOGLE_CLIENT_ID=seu_client_id
GOOGLE_CLIENT_SECRET=seu_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_REFRESH_TOKEN=seu_refresh_token
GOOGLE_CALENDAR_ID=primary

# ========================================
# ASAAS API
# ========================================
ASAAS_API_URL=https://sandbox.asaas.com/api/v3
ASAAS_API_KEY=sua_api_key_asaas
ASAAS_WEBHOOK_TOKEN=seu_webhook_token_asaas

# ========================================
# CONFIGURAÇÕES DA CLÍNICA
# ========================================
CLINIC_NAME=Consultório de Psicologia
CLINIC_PHONE=5511999999999
PSYCHOLOGIST_NAME=Dra. Nome da Psicóloga
CONSULTATION_VALUE=200.00
CONSULTATION_DURATION_MINUTES=50

# ========================================
# HORÁRIOS DE ATENDIMENTO
# ========================================
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5

# ========================================
# CONFIGURAÇÕES DE LEMBRETES
# ========================================
REMINDER_24H_ENABLED=true
REMINDER_2H_ENABLED=true

# ========================================
# SEGURANÇA
# ========================================
JWT_SECRET=seu_jwt_secret_muito_seguro
ENCRYPTION_KEY=sua_chave_de_criptografia_32chars

# ========================================
# LOGS
# ========================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
